<!--Form Create-->
<div class="modal fade" id="modal-add-tax" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h2 class="modal-title text-primary card-text" style="font-weight:600" id="exampleModalLabel"><i class="ti-plus pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.Tax @Resources.Voucher.Salary</h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form method="post" action="" id="form-tax">
                <div class="modal-body">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="PK_Boss_Id">@Resources.Voucher.HOD</label>
                        <select id="PK_Boss_Id" name="PK_Boss_Id" class="form-control">
                            <option value="">-- @Resources.Voucher.Choose @Resources.Voucher.HOD --</option>
                            @foreach (var item in ViewBag.Manager)
                            {
                                <option value="@item.PK_Boss_Id">@item.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="FK_Comp_Id">@Resources.Voucher.Company:</label>
                        <select id="FK_Comp_Id" name="FK_Comp_Id" class="form-control">
                            <option value="">-- @Resources.Voucher.Choose @Resources.Voucher.Company --</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="txt_start">@Resources.Voucher.Salary @Resources.Voucher.Start<span class="text-danger">*</span></label>
                        <div class="input-daterange input-group">
                            <input type="text" class="form-control" name="txt_start" id="txt_start" placeholder="@Resources.Voucher.Start" value="0" maxlength="20">
                            <div class="input-group-append">
                                <span class="input-group-text bg-info b-0 text-white">@Resources.Voucher.OTTo</span>
                            </div>
                            <input type="text" class="form-control" id="txt_end" name="txt_end" placeholder="@Resources.Voucher.End" value="0"  maxlength="20">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-6">
                            <label for="txt_tax">@Resources.Voucher.Tax @Resources.Voucher.Percent<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="txt_tax" name="txt_tax" placeholder="@Resources.Voucher.Tax @Resources.Voucher.Percent" required maxlength="20" value="0">
                            <div class="invalid-feedback" id="error-tax"></div>
                        </div>

                        <div class="form-group col-6">
                            <label for="txt_decrease">@Resources.Voucher.Tax @Resources.Voucher.Decrease<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="txt_decrease" name="txt_decrease" placeholder="@Resources.Voucher.Tax @Resources.Voucher.Decrease" required maxlength="20" value="0">
                            <div class="invalid-feedback" id="error-decrease"></div>
                        </div>
                    </div>
                   
                    <div class="row">
                        <div class="form-group col-6">
                            <label for="txt_family">@Resources.Voucher.Tax @Resources.Voucher.Family<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="txt_family" name="txt_family" placeholder="@Resources.Voucher.Tax @Resources.Voucher.Family" required maxlength="20" value="0">
                            <div class="invalid-feedback" id="error-family"></div>
                        </div>

                        <div class="form-group col-6">
                            <label for="txt_foreign">@Resources.Voucher.Tax @Resources.Voucher.Foreign<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="txt_foreign" name="txt_foreign" placeholder="@Resources.Voucher.Tax @Resources.Voucher.Foreign" required maxlength="20" value="0">
                            <div class="invalid-feedback" id="error-foreign"></div>
                        </div>
                    </div>                   

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-save-tax" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.Tax @Resources.Voucher.Salary
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>
<!--Form Create-->