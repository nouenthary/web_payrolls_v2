<!--Form Create-->
<div class="modal fade" id="modal-color-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <h2 class="modal-title text-primary card-text" style="font-weight:600" id="exampleModalLabel"><i class="ti-user pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.HOD</h2>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="#" action="#" id="form-boss">
                <div class="modal-body">

                    <div class="row">

                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="">@Resources.Voucher.Code</label>
                                <div class="row pl-3 pr-3">
                                    <input type="text" class="form-control col-md-6" id="Code" name="Code" placeholder="Code" readonly="readonly">
                                    <button type="button" id="btn-generate" style="background : #fff ; border: 1px solid #ced4da" class="btn col-md-6"><i class="ti ti-reload pr-1"></i> @Resources.Voucher.Generate</button>
                                </div>
                                <div class="invalid-feedback" id="error-Code"></div>
                            </div>

                            <div class="form-group">
                                <label for="">@Resources.Voucher.Name<span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="Name" name="Name" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Name" required maxlength="50">
                                <div class="invalid-feedback" id="error-Name"></div>
                            </div>

                            <div class="form-group">
                                <label for="">@Resources.Voucher.Phone <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="Phone" name="Phone" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Phone" required maxlength="20">
                                <div class="invalid-feedback" id="error-Phone"></div>
                            </div>

                            <div class="form-group">
                                <label for="">@Resources.Voucher.Status</label>
                                <select class="form-control" id="Status" name="Status">
                                    <option value="Enable">@Resources.Voucher.Enable</option>
                                    <option value="Disabled">@Resources.Voucher.Disabled</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="">@Resources.Voucher.Address</label>
                                <textarea class="form-control" id="Address" name="Address" placeholder="@Resources.Voucher.Enter @Resources.Voucher.Address" rows="4"></textarea>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-center">
                                <img style="height: 270px"
                                     src="~/Content/images/avatar.png"
                                     alt="me" class="img-thumbnail"
                                     id="photo-view-response">
                            </div>

                            <div class="form-group">
                                <input accept="image/png, image/jpeg, image/gif" type="file" class="form-control" id="photo-boss">
                                <div class="invalid-feedback" id="error-file-edit"></div>
                                <input type="hidden" id="Picture" name="Picture" class="form-control" />
                            </div>
                        </div>

                          @Html.AntiForgeryToken()
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-block" id="btn-save-boss" style="background: #28a745; color: #fff; font-size: 20px">
                        <i class="ti-save-alt pr-2"></i>@Resources.Voucher.Add @Resources.Voucher.HOD
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--Form Create-->
